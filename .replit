modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "libiconv", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FovDark Server"

[[workflows.workflow]]
name = "FovDark Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn main_simple:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python -m uvicorn main:app --host 0.0.0.0 --port 5000 --reload"]

[[ports]]
localPort = 5000
externalPort = 80
