# FovDark Gaming - Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Payment Gateway Configuration (Optional)
INFINITE_PAY_API_KEY=your-infinite-pay-api-key
INFINITE_PAY_WEBHOOK_SECRET=your-webhook-secret

# Application Configuration
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-flask-secret-key

# Security Configuration
ALLOWED_HOSTS=*.replit.app,*.replit.dev
CORS_ORIGINS=https://*.replit.app,https://*.replit.dev