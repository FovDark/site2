# Configurações do Banco de Dados
DATABASE_URL=postgresql://username:password@localhost:5432/fovdark
# Para SQLite local: DATABASE_URL=sqlite:///./fovdark.db

# Configurações JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações da Aplicação
SECRET_KEY=your-super-secret-flask-key-here
DEBUG=false
ENVIRONMENT=production

# Configurações de Rede
ALLOWED_HOSTS=yourdomain.com,localhost,127.0.0.1
CORS_ORIGINS=https://yourdomain.com

# Configurações de Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Configurações Infinite Pay
INFINITE_PAY_API_KEY=your-infinite-pay-api-key
INFINITE_PAY_WEBHOOK_SECRET=your-infinite-pay-webhook-secret

# Configurações de Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Configurações de Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Configurações de Log
LOG_LEVEL=INFO
LOG_FILE=app.log